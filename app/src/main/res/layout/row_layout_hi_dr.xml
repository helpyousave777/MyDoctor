<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView_Recycler_HiDr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="@dimen/activity_vertical_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView_Recycler_HiDr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/hi_doctor_search"/>

        <TextView
            android:id="@+id/title_Recycler_HiDr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr Name"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView_Recycler_HiDr"
            android:layout_toEndOf="@+id/imageView_Recycler_HiDr"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp" />

        <TextView
            android:id="@+id/subject_Recycler_HiDr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject Message"
            android:layout_below="@+id/title_Recycler_HiDr"
            android:layout_toRightOf="@+id/imageView_Recycler_HiDr"
            android:layout_toEndOf="@+id/imageView_Recycler_HiDr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0:0"
            android:id="@+id/txtHiDr_main_Recycler_date"
            android:layout_alignBaseline="@+id/subject_Recycler_HiDr"
            android:layout_alignBottom="@+id/subject_Recycler_HiDr"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgDelivey_Recycler_HiDr"
            android:src="@drawable/abc_btn_check_to_on_mtrl_015"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/txtHiDr_main_Recycler_date"
            android:layout_toStartOf="@+id/txtHiDr_main_Recycler_date" />


    </RelativeLayout>

</android.support.v7.widget.CardView>