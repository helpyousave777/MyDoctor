<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/txt_HiDr_main_Subject"
        android:id="@+id/txtHiDr_main_listview_subject"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0:0"
        android:id="@+id/txtHiDr_main_listview_date"
        android:layout_alignBaseline="@+id/txtHiDr_main_listview_subject"
        android:layout_alignBottom="@+id/txtHiDr_main_listview_subject"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgDelivey_HiDr"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:src="@drawable/abc_btn_check_to_on_mtrl_015"
        android:layout_above="@+id/txtHiDr_main_listview_subject_user_add"
        android:layout_toLeftOf="@+id/txtHiDr_main_listview_date"
        android:layout_toStartOf="@+id/txtHiDr_main_listview_date" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/txt_HiDr_main_Subject_User_Enter"
        android:id="@+id/txtHiDr_main_listview_subject_user_add"
        android:layout_below="@+id/txtHiDr_main_listview_subject"
        android:layout_alignLeft="@+id/txtHiDr_main_listview_subject"
        android:layout_alignStart="@+id/txtHiDr_main_listview_subject"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="19dp" />
</RelativeLayout>